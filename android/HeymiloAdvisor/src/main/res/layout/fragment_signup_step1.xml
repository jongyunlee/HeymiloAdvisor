<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primary">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingTop="16dip">
      <RelativeLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:paddingStart="15dip"
	  android:paddingEnd="15dip"
	  android:background="#fff">
	<EditText
	    android:id="@+id/edit_userid"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
	    android:textColor="@android:color/black"
	    android:paddingBottom="16dip"
	    android:paddingTop="16dip"
	    android:hint="이메일을 입력해주세요"
	    android:textColorHint="#a8a9ae"
	    android:background="@null"
	    android:singleLine="true"/>
      </RelativeLayout>
      <View
	  android:layout_width="match_parent"
	  android:layout_height="1dip"
	  android:background="@color/window_background"/>
      <RelativeLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:paddingStart="15dip"
	  android:paddingEnd="15dip"
	  android:background="#fff">
	<EditText
	    android:id="@+id/edit_password"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
	    android:textColor="@android:color/black"
	    android:paddingBottom="16dip"
	    android:paddingTop="16dip"
	    android:hint="비밀번호를 입력해주세요"
	    android:password="true"
	    android:textColorHint="#a8a9ae"
	    android:background="@null"
	    android:singleLine="true"/>
      </RelativeLayout>
      <View
	  android:layout_width="match_parent"
	  android:layout_height="1dip"
	  android:background="@color/window_background"/>
      <RelativeLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:paddingStart="15dip"
	  android:paddingEnd="15dip"
	  android:background="#fff">
	<EditText
	    android:id="@+id/edit_password_ok"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
	    android:textColor="@android:color/black"
	    android:paddingBottom="16dip"
	    android:paddingTop="16dip"
	    android:password="true"
	    android:hint="비밀번호를 다시 입력해 주세요"
	    android:textColorHint="#a8a9ae"
	    android:background="@null"
	    android:singleLine="true"/>
      </RelativeLayout>
      <View
	  android:layout_width="match_parent"
	  android:layout_height="1dip"
	  android:background="@color/window_background"/>
      <RelativeLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:paddingStart="15dip"
	  android:paddingEnd="15dip"
	  android:background="#fff">
	<EditText
	    android:id="@+id/edit_recommender"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
	    android:textColor="@android:color/black"
	    android:paddingBottom="16dip"
	    android:paddingTop="16dip"
	    android:password="true"
	    android:hint="추천인 코드를 입력해주세요"
	    android:textColorHint="#a8a9ae"
	    android:background="@null"
	    android:singleLine="true"/>
      </RelativeLayout>
      <com.balysv.materialripple.MaterialRippleLayout
	  android:layout_width="match_parent"
	  android:layout_height="?attr/actionBarSize"
	  android:layout_alignParentBottom="true"
	  android:layout_marginTop="8dip"
	  android:background="@color/background_white_line"
	  android:alpha="0.85"
	  app:mrl_rippleOverlay="true"
	  app:mrl_rippleColor="#585858"
	  app:mrl_rippleAlpha="0.2"
	  app:mrl_rippleDelayClick="false"
	  app:mrl_rippleHover="true">
	<Button
	    android:id="@+id/btn_next"
	    android:layout_width="match_parent"
	    android:background="@android:color/transparent"
	    android:layout_height="?attr/actionBarSize"
	    android:layout_gravity="center"
	    android:textColor="@color/text_black_in_white"
	    android:textSize="15dip"
	    android:text="다음"/>
      </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
